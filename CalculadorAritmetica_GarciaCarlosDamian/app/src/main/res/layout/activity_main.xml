<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/darker_gray"
        android:gravity="end|bottom"
        android:padding="16dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="48sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button android:id="@+id/btnAC" android:text="AC" android:layout_columnWeight="1" />
        <Button android:id="@+id/btnParentesis" android:text="( )" android:layout_columnWeight="1" />
        <Button android:id="@+id/btnPorcentaje" android:text="%" android:layout_columnWeight="1" />
        <Button android:id="@+id/btnDividir" android:text="/" android:layout_columnWeight="1" />

        <Button android:id="@+id/btn7" android:text="7" android:layout_columnWeight="1" />
        <Button android:id="@+id/btn8" android:text="8" android:layout_columnWeight="1" />
        <Button android:id="@+id/btn9" android:text="9" android:layout_columnWeight="1" />
        <Button android:id="@+id/btnMultiplicar" android:text="*" android:layout_columnWeight="1" />

        <Button android:id="@+id/btn4" android:text="4" android:layout_columnWeight="1" />
        <Button android:id="@+id/btn5" android:text="5" android:layout_columnWeight="1" />
        <Button android:id="@+id/btn6" android:text="6" android:layout_columnWeight="1" />
        <Button android:id="@+id/btnRestar" android:text="-" android:layout_columnWeight="1" />

        <Button android:id="@+id/btn1" android:text="1" android:layout_columnWeight="1" />
        <Button android:id="@+id/btn2" android:text="2" android:layout_columnWeight="1" />
        <Button android:id="@+id/btn3" android:text="3" android:layout_columnWeight="1" />
        <Button android:id="@+id/btnSumar" android:text="+" android:layout_columnWeight="1" />

        <Button android:id="@+id/btn0" android:text="0" android:layout_columnWeight="1" android:layout_columnSpan="2" />
        <Button android:id="@+id/btnPunto" android:text="." android:layout_columnWeight="1" />
        <Button android:id="@+id/btnIgual" android:text="=" android:layout_columnWeight="1" />
    </GridLayout>

</LinearLayout>